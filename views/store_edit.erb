<h1> <%= @store.name %> </h1>

<form class="form-group" action="/store_edit/<%=@store.id%> " method="post">
  <input type="hidden" name="_method" value="patch">
  <input id="store_id" name="store_id" type="hidden" value="<%= @store.id%>">
  <label for="new_name">Enter New Name:</label>
  <input type="text" name="new_name" class="form-control">
  <br>
  <button type="submit" class="btn button btn-primary" name="button">Submit</button>
</form>
